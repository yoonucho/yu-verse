{
  "name": "yu-verse",
  "private": true,
  "scripts": {
    "yu-calendar": "pnpm --filter yu-calendar",
    "yu-books": "pnpm --filter yu-books",
    "build": "pnpm build:all",
    "build:all": "pnpm --filter yu-calendar build && pnpm --filter yu-books build",
    "build:calendar": "pnpm --filter yu-calendar build",
    "build:books": "pnpm --filter yu-books build",
    "test": "pnpm -r test",
    "test:watch": "jest --watch",
    "test:e2e:books": "playwright test --project yu-books",
    "test:e2e:calendar": "playwright test --project yu-calendar"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.1",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^3.0.1",
    "next": "^14.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.5.0"
}
